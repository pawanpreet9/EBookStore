<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.author.author_name %></td>
        <td><%= book.genres.name if book.genres.present? %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @books %>
